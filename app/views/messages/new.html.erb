<% content_for :meta_title, "SUNRYSE | Contact" %>
<% canonical(new_message_url) %>


<div class="bg-gradient">

  <div class="d-flex flex-column flex-md-row">
    <div class="col-12 col-md-3 text-center text-md-left p-0 m-0">
      <%= link_to home_path do %>
        <%= image_tag 'logo_main.png', width: 200, alt: 'logo SUNRYSE', class: "p-0 m-0", loading: 'lazy' %>
      <% end %>
    </div>
    <div class="col-12 col-md-6">
      <h1 class="title text-bold text-center mx-auto mt-5">Contacter l'équipe SUNRYSE</h1>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col"></div>

      <div class="col-md-8 form bg-white px-4 pb-4 mb-5 text-left">

        <%= simple_form_for(@message) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="my-5">
            <%= f.input :first_name,
                        required: true,
                        label: 'Prénom',
                        input_html: { autocomplete: 'first_name' } %>
            <%= f.input :last_name,
                        required: true,
                        label: 'Nom',
                        input_html: { autocomplete: 'last_name' } %>
            <%= f.input :email,
                        required: true,
                        label: 'Adresse mail',
                        input_html: { autocomplete: 'email' } %>
            <%= f.input :phone_number,
                        required: true,
                        label: 'Numéro de téléphone',
                        input_html: { autocomplete: 'phone_number' } %>
            <%= f.input :content,
                        required: true,
                        label: 'Message',
                        input_html: { rows: 15, autocomplete: 'content' } %>
          </div>
          <div>
            <%= f.button :submit, 'Envoyer', class: "btn btn-primary w-100" %>
          </div>
        <% end %>

      </div>

      <div class="col"></div>

    </div>
  </div>

</div>
