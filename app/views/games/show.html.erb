<div class="bg-gradient">
  <div class="py-5">
    <div class="d-flex flex-column flex-md-row">

      <!-- list of all our chatrooms -->
      <div id="chatrooms" class="order-1 order-md-1">
        <div class="list-group w-200px bg-white br-light">
          <% @games.each do |game| %>
            <% (current_user == game.player1) ? (other_speaker = game.player2) : (other_speaker = game.player1) %>
            <%= link_to game_path(game), class: "list-group-item #{'active' if game == @game} d-flex align-items-center" do %>
              # <%= other_speaker.pseudo %>
              <!-- green dot -->
              <% if other_speaker.online? %>
                <div class="messages-green-dot ml-2"></div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- current chatrooms -->
      <div class="chatroom order-3 order-md-2">
        <!-- user name -->
        <h1 class="text-center">
          <%= link_to profil_path(@other_speaker.slug), class: "text-decoration-none d-flex align-items-center justify-content-center" do %>
            # <%= @other_speaker.pseudo %>
          <% end %>
        </h1>
        <div id="games" data-game-id="<%= @game.id %>">
          <div id="chessboard" style="width: 400px"></div>
          <div id="messages"></div>
        </div>
      </div>

    </div>
  </div>
</div>
